{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "wireframe",
  "displayName": "Wireframe",
  "scopeName": "source.wireframe",
  "aliases": ["wf"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#keywords" },
    { "include": "#components" },
    { "include": "#modifiers" },
    { "include": "#attributes" },
    { "include": "#braces" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wireframe",
          "match": "//.*$"
        },
        {
          "name": "comment.block.wireframe",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wireframe",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wireframe",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wireframe",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wireframe",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wireframe",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.wireframe",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wireframe",
          "match": "\\b(page|theme|device|viewport)\\b"
        }
      ]
    },
    "components": {
      "patterns": [
        {
          "name": "entity.name.tag.wireframe",
          "match": "\\b(navbar|nav|menu|sidebar|link|logo|header|footer|main|aside|section|card|form|input|button|checkbox|radio|select|option|textarea|heading|text|image|avatar|icon|badge|table|row|column|cell|list|item|alert|toast|progress|spinner|grid|stack|divider|spacer|modal|dropdown|tooltip)\\b"
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "name": "support.type.wireframe",
          "match": "\\b(primary|secondary|success|danger|warning|info|outlined|ghost|link|center|left|right|flex|active|disabled|checked|selected|error|readonly|ordered|fullWidth|flat|elevated|bold|muted|small|large)\\b"
        },
        {
          "name": "support.type.wireframe",
          "match": "\\b(text|email|password|number|date|tel|url|search|textarea)\\b(?=\\s|$|\\{)"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.wireframe",
          "match": "\\b(size|width|height|gap|padding|margin|columns|rows|value|placeholder|level|align|justify)\\b(?=:)"
        },
        {
          "name": "keyword.operator.wireframe",
          "match": ":"
        }
      ]
    },
    "braces": {
      "patterns": [
        {
          "name": "punctuation.definition.block.wireframe",
          "match": "[{}]"
        }
      ]
    }
  }
}
